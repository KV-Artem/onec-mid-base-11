	//++Калашников ДЗ-Нетология 03.06.2025 добавлен вопрос о применение скидки	
	Ответ = Ждать ВопросАсинх("Изменен процент скидки. Пересчитать таблицу товаров и услуг?",РежимДиалогаВопрос.ДаНет);
	
	Если Ответ = КодВозвратаДиалога.Да Тогда
		РассчитатьСтрокиТаблицСУчетомСкидки();
	Иначе
		
	КонецЕсли;
	
	//--

